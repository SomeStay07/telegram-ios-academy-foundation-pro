{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "pnpm install && pnpm build --filter=@telegram-ios-academy/miniapp"
  },
  "deploy": {
    "startCommand": "cd apps/miniapp && pnpm start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "on-failure"
  }
}

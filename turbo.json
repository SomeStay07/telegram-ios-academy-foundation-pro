{
  "$schema": "https://turbo.build/schema.json",
  "remoteCache": {
    "signature": true
  },
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        "storybook-static/**"
      ],
      "cache": true
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "cache": true
    },
    "lint": {
      "cache": true
    },
    "typecheck": {
      "cache": true
    },
    "dev": {
      "cache": false
    },
    "e2e": {
      "dependsOn": [
        "build"
      ],
      "cache": true
    },
    "gen": {
      "cache": true,
      "outputs": [
        "src/generated/**"
      ]
    }
  }
}

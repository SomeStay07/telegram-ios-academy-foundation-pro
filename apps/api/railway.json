{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "cd ../.. && pnpm install && pnpm run build --filter=@telegram-ios-academy/api"
  },
  "deploy": {
    "startCommand": "node dist/main.js",
    "healthcheckPath": "/api/health",
    "restartPolicyType": "always"
  }
}
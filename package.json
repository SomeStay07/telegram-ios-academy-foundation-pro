{
  "name": "telegram-ios-academy",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "pnpm": {
    "overrides": {
      "cross-spawn": "^7.0.6",
      "axios": "^1.12.0"
    }
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*",
    "content/*"
  ],
  "scripts": {
    "gen": "turbo run gen",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "e2e": "turbo run e2e",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "lesson:lint": "node tools/content-linter/lesson-lint.js",
    "course:lint": "node tools/content-linter/course-lint.js",
    "interview:lint": "node tools/content-linter/interview-lint.js",
    "content:check-duplicates": "node tools/content-linter/check-duplicates.js",
    "content:a11y-check": "node tools/content-linter/a11y-check.js",
    "content:validate-links": "node tools/content-linter/link-validator.js",
    "content:check-external-links": "node tools/content-linter/external-links.js"
  },
  "devDependencies": {
    "turbo": "^2.0.5",
    "typescript": "^5.4.5",
    "eslint": "^9.0.0",
    "@types/node": "^20.11.30",
    "@storybook/react-vite": "^8.0.10",
    "@storybook/addon-essentials": "^8.0.10",
    "@storybook/addon-a11y": "^8.0.10",
    "@storybook/addon-actions": "^8.0.10",
    "@storybook/addon-controls": "^8.0.10",
    "@storybook/addon-viewport": "^8.0.10",
    "@storybook/addon-docs": "^8.0.10",
    "@storybook/addon-backgrounds": "^8.0.10",
    "@storybook/addon-styling": "^1.3.0"
  }
}

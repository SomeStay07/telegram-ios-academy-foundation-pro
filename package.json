{
  "name": "telegram-ios-academy",
  "private": true,
  "packageManager": "pnpm@10.0.0",
  "pnpm": {
    "overrides": {
      "axios": "^1.12.0",
      "cross-spawn": "^7.0.5",
      "@pact-foundation/pact-core": "^16.1.0"
    }
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*",
    "content/*"
  ],
  "scripts": {
    "gen": "turbo run gen",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "e2e": "turbo run e2e",
    "lesson:lint": "node tools/content-linter/lesson-lint.js",
    "course:lint": "node tools/content-linter/course-lint.js",
    "interview:lint": "node tools/content-linter/interview-lint.js",
    "content:check-duplicates": "node tools/content-linter/check-duplicates.js",
    "content:a11y-check": "node tools/content-linter/a11y-check.js",
    "content:validate-links": "node tools/content-linter/link-validator.js",
    "content:check-external-links": "node tools/content-linter/external-links.js",
    "changeset": "changeset",
    "changeset:add": "changeset add",
    "changeset:status": "changeset status",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@types/node": "^20.11.30",
    "eslint": "^9.0.0",
    "turbo": "^2.0.5",
    "typescript": "^5.4.5"
  }
}
